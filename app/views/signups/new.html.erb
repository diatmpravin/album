<h1>Please Fill Up the details here </h1>

<% form_for(@signup) do |f| %>
  <%= f.error_messages %>

  <p>
    Name:<%= f.text_field :name %>
  </p>
  <p>
    Email Id:<%= f.text_field :email %>
  </p>
  <p>
    Password:<%= f.text_field :password %>
  </p>
  <p>
    Confirm_password:<%= f.text_field :confirm_password %>
  </p>
  <p>
    Phone<%= f.text_field :phone %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', signups_path %>