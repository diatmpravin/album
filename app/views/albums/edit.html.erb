<h1>Editing album</h1>

<% form_for(@album, :html => {:multipart => true}) do |f| %>
  <div id="vote_link">
      <%= add_image(f) %>
   </div>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %>:
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %>:
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<div id="vote_link"><%= link_to 'Show', @album %> </div></br></br>
